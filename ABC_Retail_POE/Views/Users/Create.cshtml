@model ABC_Retail_POE.Models.User

<h1>Add New User</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="UserFullName"></label>
        <input asp-for="UserFullName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="UserEmail"></label>
        <input asp-for="UserEmail" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="UserPassword"></label>
        <input asp-for="UserPassword" class="form-control" type="password" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
