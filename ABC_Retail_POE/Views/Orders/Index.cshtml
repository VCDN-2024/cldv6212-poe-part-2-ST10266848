@model IEnumerable<ABC_Retail_POE.Models.Order>


<h1>All Orders</h1>
<a href="@Url.Action("Create", "Orders")" class="btn btn-primary">Place New Order</a>

<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Date</th>
            <th>User</th>
            <th>Product</th>
            <th>Shipping Address</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        { //@Html.DisplayFor(modelItem => order.UserID)
            <tr>
                <td>@order.OrderId</td>
                <td>@order.OrderDate</td>
                <td>@order.UserId</td>
                <td>@order.ProductId</td>
                <td>@order.ShippingAddress</td>
                <td>
                    <form asp-action="Delete" method="post" style="display:inline;">
                        <input type="hidden" name="partitionKey" value="@order.PartitionKey" />
                        <input type="hidden" name="rowKey" value="@order.RowKey" />
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this order?');">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
